{% extends "base/index.jinja2" %}

{% block body %}
	<section class="box recovery container">
		<h3>Profile recovery</h3>
		{{_actions.render_message(view.action_result)}}
		<div>
			<form action="{{url_for('profile.init_recovery')}}"
				  method="POST"
				  autocomplete="off"
				  name="recovery-form"
				  accept-charset="UTF-8">
				<input type="email" name="email"
					   placeholder="email"
					   class="u-full-width"
					   maxlength="32" required/>
				<input type="submit" value="Recover" class="button button-primary"/>
				{{_forms.csrf_form_input()}}
			</form>
		</div>
	</section>
{% endblock body %}
